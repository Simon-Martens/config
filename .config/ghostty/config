# General
mouse-hide-while-typing = true
shell-integration = bash
cursor-style-blink = true
cursor-style = "bar"
clipboard-read = allow
clipboard-write = allow
confirm-close-surface = false
theme = "Dark Modern"
window-save-state = always
copy-on-select = true

# Font settings
font-family = "UbuntuMono"
font-size = 13.8
font-feature = -calt # Disables programming font ligatures as they look ugly af
adjust-cell-height = 2
adjust-cell-width = 3%

# Keybindings
keybind = ctrl+shift+f=toggle_fullscreen
keybind = ctrl+shift+d=toggle_window_decorations

# Startup command
command = bash -c "~/scripts/tmux-startup.sh; exec bash"
